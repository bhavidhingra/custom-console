#!/usr/bin/env bash

# Usage: __trim_escaped_quotes "${rawStr}"
# Output: rawStr without escaped quotes
# Example:
#   Input: \"Some\ String\"
#   Output: Some\ String
function __trim_escaped_quotes() {
    str="${1}"
    str=${str/#\\\"/}     # replace prefix
    str=${str/%\\\"/}	  # replace suffix
    echo "${str}"
}